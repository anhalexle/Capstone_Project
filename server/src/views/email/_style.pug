style.
    body {
    margin: 0;
    background-color: #CCCCCC;
    }
    .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    }
    .header {
    background-color: #f7fefe;
    width: 100%;
    max-width: 700px;
    text-align: center;
    font-size: 30px;
    font-weight: 900;
    }
    .header p {
    margin: 0.5em 0 0.5em 0;
    }
    .background {
    position: relative;
    width: 100%;
    max-width: 700px;
    height: 380px;
    }
    .background div {
    position: absolute;
    top: 0;
    text-align: center;
    color: #FFFFFF;
    width: calc(100% - 60px);
    height: 380px;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    padding: 0 30px 0 30px;
    }
    .background p,
    .background h1 {
    margin: 0;
    }
    .background button {
    width: 150px;
    height: 50px;
    border: none;
    background-color: #000000;
    color: #FFFFFF;
    font-weight: bold;
    margin: 15px auto 15px auto;
    }
    .information {
    background-color: #f7fefe;
    width: 100%;
    max-width: 700px;
    text-align: center;
    }
    .information .date {
    font-size: 12px;
    text-align: right;
    }
    .main {
    position: relative;
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    }
    .main h1 {
    color: #fcb644;
    margin: 0 0 10px 0;
    }
    .main .col {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 25%;
    font-weight: bold;
    }
    .col h1, .col p {
    text-shadow: 1px 1px 0 #CCCCCC;
    }
    .col.focus {
    width: 100%;
    font-size: 22px;
    }